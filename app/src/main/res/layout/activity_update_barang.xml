<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    tools:context=".Kubikasi.Barang.UpdateBarang">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_marginTop="20dp"
            android:id="@+id/grid1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4">

            <TextView
                android:id="@+id/idbText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="1"
                android:text="Id Barang "/>

            <EditText
                android:id="@+id/idb"
                android:layout_width="217dp"
                android:layout_column="3"
                android:textSize="15sp"
                android:singleLine="true"
                android:focusable="false"
                android:layout_gravity="left"
                android:layout_row="1"/>

            <TextView
                android:id="@+id/namabText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="3"
                android:text="Nama Barang "/>

            <EditText
                android:id="@+id/namab"
                android:layout_width="217dp"
                android:layout_column="3"
                android:textSize="15sp"
                android:layout_gravity="left"
                android:layout_row="3"/>

            <TextView
                android:id="@+id/lebarText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="5"
                android:text="Lebar "/>

            <EditText
                android:id="@+id/lebar"
                android:layout_column="3"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_width="217dp"
                android:layout_gravity="left"
                android:layout_row="5"/>

            <TextView
                android:id="@+id/panjangText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="7"
                android:text="Panjang "/>

            <EditText
                android:id="@+id/panjang"
                android:layout_width="217dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_column="3"
                android:layout_gravity="left"
                android:layout_row="7"/>

            <TextView
                android:id="@+id/tinggiText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="9"
                android:text="Tinggi "/>

            <EditText
                android:id="@+id/tinggi"
                android:layout_width="217dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_column="3"
                android:layout_gravity="left"
                android:layout_row="9"/>

            <TextView
                android:id="@+id/beratText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="11"
                android:text="Berat "/>

            <EditText
                android:id="@+id/berat"
                android:layout_width="217dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_column="3"
                android:layout_gravity="left"
                android:layout_row="11"/>

            <TextView
                android:id="@+id/hargaText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="13"
                android:text="Harga "/>

            <EditText
                android:id="@+id/harga"
                android:layout_width="217dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_column="3"
                android:layout_gravity="left"
                android:layout_row="13"/>

            <TextView
                android:id="@+id/tujuanText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="15"
                android:text="Tujuan "/>

            <Spinner
                android:id="@+id/tujuan"
                android:layout_width="217dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_column="3"
                android:layout_gravity="left"
                android:layout_row="15"/>

            <TextView
                android:id="@+id/qtyText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="17"
                android:text="Jumlah "/>

            <EditText
                android:id="@+id/qty"
                android:layout_width="217dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_column="3"
                android:layout_gravity="left"
                android:layout_row="17"/>

            <TextView
                android:id="@+id/stockText"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="19"
                android:text="Stock "/>

            <Spinner
                android:id="@+id/stock"
                android:layout_width="217dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:layout_column="3"
                android:layout_gravity="left"
                android:layout_row="19"/>

            <Space
                android:layout_width="21dp"
                android:layout_height="1dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0" />

            <Space
                android:layout_width="101dp"
                android:layout_height="1dp"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="2" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="4" />
            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="6" />
            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="8" />
            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="10" />
            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="12" />
            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="14" />
            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="16" />
            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="18" />
            <Space
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_column="0"
                android:layout_gravity="fill_horizontal"
                android:layout_row="19" />

        </GridLayout>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid1">

            <Button
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_update"
                android:onClick="update"
                android:textAllCaps="false"
                android:background="@drawable/bg_upload"
                android:textColor="@android:color/white"
                android:text="Update"/>

            <Button
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:onClick="delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete"
                android:textAllCaps="false"
                android:background="@drawable/bg_upload"
                android:textColor="@android:color/white"
                android:text="Delete"/>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
