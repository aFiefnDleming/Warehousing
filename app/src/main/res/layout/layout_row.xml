<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    android:id="@+id/cardview"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="8dp">

    <GridLayout
        android:id="@+id/grid1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:layout_below="@+id/ly2">

        <TextView
            android:id="@+id/idbText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="Id Barang "/>

        <TextView
            android:id="@+id/idbValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="1"/>

        <TextView
            android:id="@+id/namabText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="3"
            android:text="Nama Barang "/>

        <TextView
            android:id="@+id/namabValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="3"/>

        <TextView
            android:id="@+id/lebarText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="5"
            android:text="Lebar "/>

        <TextView
            android:id="@+id/lebarValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="5"/>

        <TextView
            android:id="@+id/panjangText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="7"
            android:text="Panjang "/>

        <TextView
            android:id="@+id/panjangValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="7"/>

        <TextView
            android:id="@+id/tinggiText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="9"
            android:text="Tinggi "/>

        <TextView
            android:id="@+id/tinggiValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="9"/>

        <TextView
            android:id="@+id/beratText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="11"
            android:text="Berat "/>

        <TextView
            android:id="@+id/beratValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="11"/>

        <TextView
            android:id="@+id/hargaText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="13"
            android:text="Harga "/>

        <TextView
            android:id="@+id/hargaValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="13"/>

        <TextView
            android:id="@+id/tujuanText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="15"
            android:text="Tujuan "/>

        <TextView
            android:id="@+id/tujuanValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="15"/>

        <TextView
            android:id="@+id/qtyText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="17"
            android:text="Jumlah "/>

        <TextView
            android:id="@+id/qtyValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="17"/>

        <TextView
            android:id="@+id/stockText"
            android:layout_column="1"
            android:layout_gravity="left"
            android:layout_row="19"
            android:text="Stock "/>

        <TextView
            android:id="@+id/stockValue"
            android:layout_column="3"
            android:layout_gravity="left"
            android:layout_row="19"/>

        <Space
            android:layout_width="21dp"
            android:layout_height="1dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="101dp"
            android:layout_height="1dp"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_row="0" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2" />

        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="6" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="8" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="10" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="12" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="14" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="16" />
        <Space
            android:layout_width="1dp"
            android:layout_height="10dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="18" />
        <Space
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_row="19" />

    </GridLayout>

</android.support.v7.widget.CardView>